<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "HTTP://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!--DTO클래스의 별칭을 부여  -->
	<typeAliases>
	    <typeAlias alias="ProductVO"  type="com.product.domain.ProductVO"/>
	    <typeAlias alias="CategoryVO"  type="com.product.domain.CategoryVO"/>
	    <typeAlias alias="UserVO" type="com.user.domain.UserVO"/>
	    <typeAlias alias="CartPrdVO" type="com.order.domain.CartPrdVO"/>
	    <typeAlias alias="CartVO" type="com.order.domain.CartVO"/>
	    <typeAlias alias="ChangeVO" type="com.order.domain.ChangeVO"/>
	    <typeAlias alias="OrderListVO" type="com.order.domain.OrderListVO"/>
	    <typeAlias alias="OrdersVO" type="com.order.domain.OrdersVO"/>
	    <typeAlias alias="PaymentVO" type="com.order.domain.PaymentVO"/>
	    <typeAlias alias="CodeInfoVO" type="com.codeinfo.domain.CodeInfoVO"/>
	    <typeAlias alias="BoardVO" type="com.board.domain.BoardVO"/>
	    <typeAlias alias="AdminVO" type="com.admin.domain.AdminVO"/>
	</typeAliases>
	
	<!--접속후 불러올 파일의 리스트를 적어주는 부분  -->
	<mappers>
	    <mapper resource="com/product/dao/ProductMapper.xml"/>
	    <mapper resource="com/user/dao/UserMapper.xml"/>
	    <mapper resource="com/cart/dao/CartMapper.xml"/>
	    <mapper resource="com/change/dao/ChangeMapper.xml"/>
	    <mapper resource="com/order/dao/OrderMapper.xml"/>
	    <mapper resource="com/pay/dao/PayMapper.xml"/>
	    <mapper resource="com/codeinfo/dao/CodeInfoMapper.xml"/>
	    <mapper resource="com/board/dao/BoardMapper.xml"/>
	    <mapper resource="com/admin/dao/AdminMapper.xml"/>
	</mappers>
</configuration>
